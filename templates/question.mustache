<div class="swiftquiz-box {{# instructor }}instructor{{/ instructor }}">
    <form id="swiftquiz_question_form" action="" method="post" enctype="multipart/form-data" accept-charset="utf8" onsubmit="return false;">
        <div class="swiftquiz-response-container">{{{ question }}}</div>
        <input type="hidden" name="slot" value="{{ slot }}">
        {{^ instructor }}
        <div class="save_row">
            <div class="swiftquiz-save-question">
                <button class="btn btn-primary">Save</button>
            </div>
        </div>
        {{/ instructor }}
    </form>
</div>
